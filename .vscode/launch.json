{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "launch app",
            "type": "debugpy",
            "request": "launch",
            "program": "./ui/app.py",
            "console": "integratedTerminal",
            "workingDirectory": "${workspaceFolder}/special_agent"
        },
        {
            "name": "Run Chainlit (bash)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/run.bash",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Chainlit App",
            "type": "python",
            "request": "launch",
            "module": "chainlit",
            "args": [
                "run",
                "ui/app.py",
                "-w",                     // auto-reload on save
                "--port", "8000"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "OLLAMA_BASE_URL": "http://localhost:11434"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}